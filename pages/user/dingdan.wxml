<!--pages/user/dingdan.wxml-->
<scroll-view class="swiper-tab" scroll-x scroll-with-animation bindscroll="scrollMove">
  <view class='swiper-tab-son1'>
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" data-otype="pay" bindtap="swichNav">
      <view>
        <image src="/images/dfk.png"></image>
        <view></view>
      </view>
      <text class='font_12'>待付款</text>  
    </view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" data-otype="deliver" bindtap="swichNav">
      <view>
        <image src="/images/dfh.png"></image>
      </view>
      <text class='font_12'>待发货</text> 
    </view> 
    <view class="font_12 swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" data-otype="receive" bindtap="swichNav">
      <view>
        <image src="/images/dsh.png"></image>
      </view>
      <text class='font_12'>待收货</text> 
    </view>
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" data-otype="zu" bindtap="swichNav"> 
      <view>
        <image src="/images/dpl.png"></image>
      </view>
      <text class='font_12'>租赁中</text> 
    </view>
  </view>
  <view class='swiper-tab-son1'>
    <view class="swiper-tab-list {{currentTab==4 ? 'on' : ''}}" data-current="4" data-otype="restitution" bindtap="swichNav">
      <view>
        <image src="/images/dfk.png"></image>
      </view>
      <text class='font_12'>归还中</text>  
    </view>
    <view class="swiper-tab-list {{currentTab==5 ? 'on' : ''}}" data-current="5" data-otype="guihuan" bindtap="swichNav">
      <view>
        <image src="/images/tksh.png"></image>
      </view>
      <text class='font_12'>已归还</text> 
    </view> 
    <view class="swiper-tab-list {{currentTab==6 ? 'on' : ''}}" data-current="6" data-otype="finish" bindtap="swichNav">
      <view>
        <image src="/images/dsh.png"></image>
      </view>
      <text class='font_12'>已完成</text>  
    </view>
    <view class="swiper-tab-list {{currentTab==7 ? 'on' : ''}}" data-current="7" data-otype="" bindtap="swichNav"> 
      <view>
        <image src="/images/dpl.png"></image>
      </view>
      <text class='font_12'>退款/售后</text> 
    </view>
  </view>
</scroll-view>

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight + 45}}px" bindchange="bindChange">

  <!-- 待付款 -->
  <swiper-item> 
    <view class="search_no" wx:if="{{!orderList0.length}}">
        <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
        <text>没有可用订单/(ㄒoㄒ)/~~</text>
    </view>

    <view class="shop df" wx:for="{{orderList0}}">        
        <image class="sh_slt" src="{{item.photo_x}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="/pages/product/detail?productId={{item.pid}}" hover-class="changestyle">
                <view class="sp_tit ovh1">{{item.name}}</view>
                </navigator>
                <view class="sp_neb">日租金：¥ {{item.price_yh}} 租赁天数：{{item.zu_days}}天   设备：×{{ item.product_num}}</view>
                <view class="sp_jg">订单总金额：¥ {{item.price}}</view>
                <view class="font_12 red fl_r" bindtap="payOrderByWechat" data-orderId="{{item.id}}" data-ordersn="{{item.order_sn}}" wx:if="{{item.type=='weixin'}}">微信支付</view>
                <view class="font_12 red fl_r" bindtap="payOrderByAlipay" data-orderId="{{item.id}}" data-ordersn="{{item.order_sn}}" wx:if="{{item.type=='alipay'}}">支付宝支付</view>
                <view class="font_12 red fl_r" bindtap="payOrderByPreauth" data-orderId="{{item.id}}" data-ordersn="{{item.order_sn}}" wx:if="{{item.type=='preauth'}}">支付宝预授权支付</view>
                <view class="font_12 red fl_r" bindtap="payOrderByUnionpay" data-orderId="{{item.id}}" data-ordersn="{{item.order_sn}}" wx:if="{{item.type=='unionpay'}}">银联预授权支付</view>
                <!--<navigator class="font_12 red fl_r" url="../order/downline?orderId={{item.id}}" wx:if="{{item.PayType=='cash'}}">线下支付</navigator>-->

                <view class="font_12 red fl_r mr_5" bindtap="removeOrder" data-order-id="{{item.id}}">取消订单</view>
                <navigator url="../order/detail?orderId={{item.id}}" class="font_12 red fl_r mr_5">订单详情</navigator>

            </view>
        </view>
    </view>
  </swiper-item>

  <!-- 待发货 -->
  <swiper-item>
    <view class="search_no" wx:if="{{!orderList1.length}}">
        <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
        <text>没有可用订单/(ㄒoㄒ)/~~</text>
    </view>
    <view class="shop df" wx:for="{{orderList1}}">
        <image class="sh_slt" src="{{item.photo_x}}"></image>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../index/detail?productId={{item.pid}}" hover-class="changestyle">
                    <view class="sp_tit ovh1">{{item.name}}</view>
                </navigator>
                <view class="sp_neb">日租金：¥ {{item.price_yh}} 租赁天数：×{{item.zu_days}} 设备：×{{ item.product_num}}</view>
                <view class="sp_jg">订单总金额：¥ {{item.price}}</view>
                <navigator class="font_12 red fl_r" url="tuihuo?orderId={{item.id}}">申请退款</navigator>
                <navigator url="../order/detail?orderId={{item.id}}" class="font_12 red fl_r mr_5">订单详情</navigator>
            </view>
        </view>
    </view>
  </swiper-item>

  <!-- 待收货 -->
  <swiper-item>
        <view class="search_no" wx:if="{{!orderList2.length}}">
            <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
            <text>没有可用订单/(ㄒoㄒ)/~~</text>
        </view>
        <view class="shop df" wx:for="{{orderList2}}">        
        <image class="sh_slt" src="{{item.photo_x}}"></image>
        <view class="df_1">            
