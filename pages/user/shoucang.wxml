<!--pages/user/shoucang.wxml-->
<view class="page" wx:if="{{collectData.length}}">

    <view class="shop df" wx:for="{{collectData}}">   
        <navigator class="sh_slt" url="../product/detail?productId={{item.pid}}">     
        <image class="sh_slt" src="{{item.photo}}"></image>
        </navigator>
        <view class="df_1">            
            <view class="sp_text">
                <navigator url="../product/detail?productId={{item.pid}}">
                  <view class="sp_tit ovh1">{{item.pro_name}}</view>
                  <view class="sp_neb">租金：¥{{item.price_yh}} / 天</view>
                <view class="sp_neb">押金：¥{{item.price_yj}}</view>
                </navigator>
                <view class="dle" data-favid="{{item.pid}}" bindtap="removeFavorites">取消收藏</view>
            </view>
        </view>
    </view>

</view>

<view class="search_no" wx:if="{{!collectData.length}}">
    <view class="font_14"><image class="scimg" src="/images/search_no.png"></image></view>
    <text>暂时还没有收藏/(ㄒoㄒ)/~~</text>
</view>


