
<view class='box'>

    <!-- 轮播图 -->
    <!-- <view class=""> -->
        <swiper autoplay="{{true}}" duration="{{500}}" indicatorActiveColor="#fff" indicatorColor="rgba(255,255,255,0.5)" indicatorDots="{{true}}" interval="{{5000}}" style="height:{{viewHeight}}px">
            <block wx:for="{{imgUrls}}">
                <swiper-item wx:if="{{item.link}}">
                    <navigator url="{{item.link}}">
                        <image bindload="bindToImageLoad" style='width:100%;'  mode="widthFix" src="{{item.photo}}?imageView2/1/w/750/h/320"></image>
                    </navigator>
                </swiper-item>
                <swiper-item wx:else>
                    <image bindload="bindToImageLoad" style='width:100%;' mode="widthFix" src="{{item.photo}}?imageView2/1/w/750/h/320"></image>
                </swiper-item>
            </block>
        </swiper>
