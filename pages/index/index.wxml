        </navigator>
        <!-- bindtap='jumpClass' -->
        <view class="btns-son" bindtap='jumpClass'>
            <image src="/images/equipment2.png" class='imgs-size'></image>
            <view>产品分类</view>
        </view>
        <!-- brand_equip/brand_equip -->
        <navigator class="btns-son" url="/pages/brand_equip/brand_equip">
            <image src="/images/equipment3.png" class='imgs-size'></image>
            <view>品牌器材</view>
        </navigator>
        <!-- rent/rent -->
        <navigator class="btns-son" url="/pages/rent/rent">
            <image src="/images/equipment4.png" class='imgs-size'></image>
            <view>租赁指南</view>
        </navigator>
    </view>


