   <view class="fee">
        <text class="cun">租金</text>
       <view class="dian">
        <view class="stepper">

       <!-- 减号 -->
       
       <!-- 数值 -->
       <view wx:if="{{fee}}">¥ {{fee}}</view>
       <view wx:else>{{itemData.price_yh * buynum}}</view>
