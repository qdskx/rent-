<view class="shu1">
  <text class="cun">开始日期</text>
  <picker class="dian" mode="date" start="{{stime}}" end="{{etime}}" value="{{stime}}" bindchange="bindDateChange">
    <view class="stepper" style="font-size:30rpx">
    <view wx:if="{{stime}}">{{stime}}</view>
    <view wx:else> 选择开始日期 </view>
    </view>
  </picker>
</view>
  <view class="shu1">
        <text class="cun">租赁天数</text>
       <view class="dian">
        <view class="stepper">

       <!-- 减号 -->
       <text class="{{minusStatuses[index]}}" data-alpha-beta="0" bindtap="changeNum">-</text>
       <!-- 数值 -->
       <view class="nownum"><input type="number"value="{{buynum}}">
</input></view>
       <!-- 加号 -->
       <text class="normal" data-alpha-beta="1" bindtap="changeNum">+</text> 天
      </view>
      </view>
   </view>
       <view class="shu1">
        <text class="cun">设备数量</text>
       <view class="dian">
        <view class="stepper">

       <!-- 减号 -->
       <text class="{{minusStatuses[index]}}" data-alpha-beta="0" bindtap="changeNum1">-</text>
       <!-- 数值 -->
       <view class="nownum"><input type="number"value="{{buynumber}}">
</input></view>
       <!-- 加号 -->
       <text class="normal" data-alpha-beta="1" bindtap="changeNum1">+</text> 件
      </view>
      </view>
   </view>
