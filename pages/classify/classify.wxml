<!--pages/classify/classify.wxml-->


  <view class='up'>
    <view class="son {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">分类</view>
    <view class="son {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">品牌</view>
  </view>


<!-- 进入分类页默认展示的 Start -->
<view class="section" duration="300"  bindchange="swiperTab" wx:if="{{currentTab == 0}}">
    <!-- 左侧类型 -->
    <scroll-view scroll-y="true" class="left">
        <view wx:for="{{types}}" wx:key="typeId" data-type-id="{{item.id}}" bindtap="tapType" class="{{item.id == currType ? 'active' : ''}} ovh1" style="font-size:26rpx">
            {{item.name}}
        </view>
    </scroll-view>

    <!-- 右侧数据 -->
    <scroll-view scroll-y="true" class="right">
        <view class="typeTree">
            <view  class="brand" wx:for="{{typeTree}}" wx:for-item="data">
                <navigator url="../listdetail/listdetail?cat_id={{data.id}}&title={{data.name}}" wx:key="typeId" class="item">
                    <image src="{{data.bz_1}}"></image>
                    <text>{{data.name}}</text>
                </navigator>
                    
            </view>
        </view>
    </scroll-view>
</view>
<!-- 进入分类页默认展示的 End -->





<!-- 点击品牌分类后展示内容 Start -->
<view class="section" wx:else>
    <!-- 左侧类型 -->
    <scroll-view scroll-y="true" class="left">
        <view wx:for="{{types}}" wx:key="typeId" data-type-id="{{item.id}}" bindtap="tapType2" class="ovh1 {{item.id == currType ? 'active' : ''}}" style="font-size:26rpx">
            {{item.name}}
        </view>
    </scroll-view>

    <!-- 右侧数据 -->
    <scroll-view scroll-y="true" class="right">
        <view class="typeTree">
            <view  class="brand" wx:for="{{typeTree}}" wx:for-item="data">
                <navigator url="/pages/brand_equip/brand_listdetails/brand_listdetails?brandId={{data.id}}&title={{data.name}}" wx:key="typeId" class="item">
                    <image src="{{data.photo}}"></image>
                    <text>{{data.name}}</text>
                </navigator>
                    
            </view>
        </view>
    </scroll-view>
</view>
<!-- 点击品牌分类后展示内容 End -->

