/* pages/certify/certify.wxss */
page{
  height: 100%;
  width: 100%;
}
.cert_container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; 
  height: auto; 
}

.cert{
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* align-items: center; */
  width: 100%;
  height: 80rpx;
  margin-top: 300rpx;
  overflow: hidden;
}
.cert .btn{
  width: 30%;
  height: 60rpx;
  text-align: center;
  line-height: 55rpx;
  border: 1px solid #ddd;
  border-radius: 3px;
  font-family: "黑体";
  font-size: 30rpx;
  color: #707070;
  margin-right: 25rpx;
  box-shadow: 0 0 10px #ddd;
}
.cert .drop_margin_r{
  margin-right: 0;
}


.fast_login{
  width: 58%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* align-items: center; */
  margin-top: 50rpx;
}
.fast_login .son{
  width: 28%;
  height: 10rpx;
  color: #DADBD6;
  display: block;
  border-top: 1px solid #DADBD6;
}
.fast_login .mid{
  font-family: "黑体";
  font-size: 24rpx;
  color: #767676;
  width: 33%;
  height: auto;
  margin:-16rpx 20rpx 0;
  border: none;
}


.one_click{
  width: 60%;
  height: 64rpx;
  margin: 50rpx auto;
}
.one_click .uni_son{
  /* width: 60%; */
  height: 64rpx;
  background: #1AAC19;
  box-shadow: 0 0 8px #1AAC19;
  border: 1px solid #1AAC19;
  color: #fff;
  font-family: "黑体";
  font-size: 30rpx;
}

.final{
  width: 65%;
  height: 30rpx;
  font-family: "黑体";
  color:#080401;
  /* margin: 20px auto; */
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.final .blue{
  color: #36A3F5;
}